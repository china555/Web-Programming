<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/header'); -%>
        <title>
            Update user
        </title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/">Search Movie</a>
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link" href="/admin">Main</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search">Search</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
        </ul>
    </nav>
    <main role="main">
        <div class="container">
            <% if (typeof message !== 'undefined') { %>
                <div class="row">
                    <div class="col-12 alert alert-danger" role="alert">
                        <p class="error">
                            <%= message %>
                        </p>
                    </div>
                </div>

                <% } %>
                    <div class="row">
                        <form class="col-12" action="/admin/update/<%= id %>" method="POST">
                            <div class="form-group">
                                <label for="usernameInput">First name</label>
                                <input type="text" class="form-control" id="fname" name="fname" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <label for="usernameInput">Last name</label>
                                <input type="text" class="form-control" id="lname" name="lname" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="role" name="role">
                            <option value="general">General User</option>
                            <option value="admin">Admin User</option>
                        </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Email address can be used for one account</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="password1" name="password1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password comfirm</label>
                                <input type="password" class="form-control" id="password2" name="password2">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
        </div>
    </main>
    <%- include('../partials/bootstrap'); -%>

</body>

</html>